<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="/css/common.css">
        <link rel="stylesheet" type="text/css" href="/css/signup.css">
    </head>
    <body>
    <div class="container-flud concon">
        <!-- 구름이미지 -->
        <div class="main_logo_info">
            <img class="logo_size" src="/img/logo.png">
        </div>
        <!-- 회원가입입력란 -->
        <div class="signup_input_all">
            <form action="signup" method="post" name="info">
                <div class="signup_insert_input">
                    <!-- 이름 -->
                    <input class="trans_size" name="user_Name" type="text" placeholder="이름을 입력해주세요" required/>
                    <!-- 아이디(이메일) -->
                    <input class="trans_size" name="user_Eid" id="id1" type="text" placeholder="이메일을 입력해주세요" required/>
                    <input class="trans_size" id="id2" type="text" placeholder="이메일을 한번더 입력해주세요" onchange="confirm1()" required/>
                    </br>
                    <label class="cc_label d-none" id="check1">이메일 확인</label>
                    </br>
                    <!-- 비밀번호 -->
                    <input class="trans_size" name="user_Pw" id="pwd1" type="password" placeholder="비밀번호를 입력해주세요" required/>
                    <input class="trans_size" id="pwd2" type="password" placeholder="비밀번호를 재입력해주세요" onchange="confirm2()" required/>
                    </br>
                    <label class="cc_label d-none" id="check2">비밀번호 확인</label>
                    </br>
                    <!-- 닉네임 -->
                    <input class="trans_size" type="text" placeholder="별명을 입력해주세요" required/>
                </div>
                <div class="row signup_all_button d-flex justify-content-around align-self-center">
                    <div class="btn_ss col-md-6">
                        <button class="btn" onclick="main_on()">취소</button>
                    </div>
                    <div class="btn_ss col-md-6">
                        <button class="btn" type="submit">회원가입</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <script type="text/javascript">
        function main_on() {
            location.href = "/indexAll";
        }
        function confirm1(conf) {
            var id1 = document.getElementById('id1').value;
            var id2 = document.getElementById('id2').value;
            if( id1 != id2 ) {
                document.getElementById("check1").classList.remove("d-none");
                document.getElementById('check1').innerHTML='이메일이 일치하지 않습니다.';
                document.getElementById('check1').style.color='red';
            } else {
                document.getElementById("check1").classList.remove("d-none");
                document.getElementById('check1').innerHTML='이메일이 일치합니다.';
                document.getElementById('check1').style.color='skyBlue';
            }
        }
        function confirm2(conf) {
            var p1 = document.getElementById('pwd1').value;
            var p2 = document.getElementById('pwd2').value;
            if( p1 != p2 ) {
                document.getElementById('check2').classList.remove('d-none');
                document.getElementById('check2').innerHTML='비밀번호가 일치하지 않습니다.';
                document.getElementById('check2').style.color='red';
            } else {
                document.getElementById('check2').classList.remove('d-none');
                document.getElementById('check2').innerHTML='비밀번호가 일치합니다.';
                document.getElementById('check2').style.color='skyBlue';
            }
        }
    </script>
</body>
</html>